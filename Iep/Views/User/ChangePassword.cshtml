@model Iep.Models.View.ChangePasswordView
@{
    ViewData["Title"] = "ChangePassword";
}
<head>
 <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/js/validationPass.js" asp-append-version="true"></script>
</head>
<h1 align="center">Change password</h1>
<div class="row justify-content-center">
    <div class="col-xl-4">
        <form asp-controller="User" asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  asp-for="oldPassword" class="control-label"></label>
                <input id="oldPass" asp-for="oldPassword" class="form-control" />
                <div id="oldPass_error">Please enter your old password</div>
                <span asp-validation-for="oldPassword" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label  asp-for="password" class="control-label"></label>
                <input id = "password" asp-for="password" class="form-control" />
                <div id="pass_error">Please enter correct password</div>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="confirmPassword" class="control-label"></label>
                <input id ="confirmedPass" asp-for="confirmPassword" class="form-control" />
                <div id="confirmPass_error">Password dosen't match</div>
                <span asp-validation-for="confirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="changePass" type="submit" value="Change" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>