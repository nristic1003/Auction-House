@model Iep.Models.View.AuctionModel 
@{
    ViewData["Title"] = "NewAuction";
}
@{
   String x = DateTime.Now.GetDateTimeFormats('s')[0];
}
<head>
 <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/js/validationAuc.js" asp-append-version="true"></script>
</head>
<h1 align="center">New Auction</h1>
<div class="row justify-content-center">
    <div class="col-xl-4">
        <form asp-controller="User" asp-action="NewAuction" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label">Name</label>
                <input id="name" asp-for="name" class="form-control" />
                <div id="name_error">The Name field is required.</div>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description"
                 class="control-label">Description</label>
                <textarea id="description"  asp-for="description" class="form-control" rows = "4"/> </textarea>
                <div id="description_error">The Description field is required.</div>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="file"
                 class="control-label"></label>
                <input id="file" type="file" asp-for="file" class="form-control" />
                <div id="file_error">The Image field is required.</div>
                <span asp-validation-for="file" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="startPrice"
                 class="control-label"></label>
                <input type="number" asp-for="startPrice" class="form-control" />
                <span asp-validation-for="startPrice" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <label asp-for="openDate" class="control-label">Open Date</label>
                <input type="datetime-local"  min='@x' value="@x"   asp-for="openDate"  class="form-control" />
                <span asp-validation-for="openDate" class="text-danger"></span>
            </div>
                 <div class="form-group">
                <label asp-for="closeDate" class="control-label">Close Date</label>
                <input  asp-for="closeDate" min ="@x" value="@x" type="datetime-local" class="form-control"  />
                <span asp-validation-for="closeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id ="newAuction" type="submit" value="Create Auction" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
