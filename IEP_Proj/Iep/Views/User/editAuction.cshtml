@model Iep.Models.View.AuctionModel;

@{
    ViewData["Title"] = "EditAuction";
}
@{
   String x = DateTime.UtcNow.GetDateTimeFormats('d')[5];
}

<h1 align="center">New Auction</h1>
<div class="row justify-content-center">
    <div class="col-xl-4">
        <form asp-controller="User" asp-action="NewAuction" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label">Name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description"
                 class="control-label">Description</label>
                <input type="text" asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="file"
                 class="control-label"></label>
                <input type="file" asp-for="file" class="form-control" />
                <span asp-validation-for="file" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="startPrice"
                 class="control-label"></label>
                <input type="number" asp-for="startPrice" class="form-control" />
                <span asp-validation-for="startPrice" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <label asp-for="openDate" class="control-label">Open Date</label>
                <input type="datetime-local" min = @x value = "2020-07-01" asp-for="openDate" class="form-control" />
                <span asp-validation-for="openDate" class="text-danger"></span>
            </div>
                <div class="form-group">
                <label asp-for="closeDate" class="control-label">Close Date</label>
                <input type="datetime-local" value="07-07-2020" min=@x class="form-control" />
                <span asp-validation-for="closeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Auction" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
